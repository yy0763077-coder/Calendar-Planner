/* ==========================================
   Page Container
   ========================================== */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #ffffff;
  position: relative;
}

/* ==========================================
   Header
   ========================================== */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 48rpx 24rpx;
}

.header-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.menu-line {
  width: 36rpx;
  height: 4rpx;
  background: #334155;
  border-radius: 2rpx;
}

.avatar-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 5rpx solid;
}

.avatar-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
}

.avatar-text.avatar-fullname {
  font-size: 22rpx;
  max-width: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

/* ==========================================
   Month Navigation
   ========================================== */
.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  padding: 8rpx 32rpx;
}

.arrow-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.arrow-btn.small {
  width: 56rpx;
  height: 56rpx;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  border: solid #F6C6EA;
  border-width: 0 4rpx 4rpx 0;
  display: inline-block;
}

.arrow-icon.left {
  transform: rotate(135deg);
  margin-left: 4rpx;
}

.arrow-icon.right {
  transform: rotate(-45deg);
  margin-right: 4rpx;
}

.arrow-icon.small {
  width: 14rpx;
  height: 14rpx;
  border-width: 0 3rpx 3rpx 0;
}

.month-title {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.month-text {
  font-size: 36rpx;
  font-weight: 700;
  color: rgba(15, 23, 42, 0.6);
}

/* ==========================================
   Group Bar
   ========================================== */
.group-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 8rpx 32rpx;
}

.group-bar-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #64748B;
}

.group-bar-arrow {
  font-size: 20rpx;
  color: #94A3B8;
}

/* ==========================================
   Group Gate / Create / Join / Switcher
   ========================================== */
.group-gate {
  background: #fff;
  border-radius: 32rpx;
  width: calc(100% - 96rpx);
  padding: 56rpx 40rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
}

.group-gate-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #171116;
  display: block;
  text-align: center;
  margin-bottom: 48rpx;
}

.group-gate-btns {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.group-gate-btn {
  padding: 32rpx;
  border-radius: 24rpx;
  border: 3rpx dashed #E2E8F0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.group-gate-btn.primary {
  background: rgba(246, 198, 234, 0.15);
  border-color: #F6C6EA;
}

.group-gate-btn text:first-child {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
}

.group-gate-desc {
  font-size: 24rpx;
  color: #94A3B8;
}

.group-form {
  background: #fff;
  border-radius: 32rpx;
  width: calc(100% - 96rpx);
  padding: 48rpx 40rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
}

.group-form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #171116;
  display: block;
  margin-bottom: 32rpx;
}

.group-form-input {
  height: 96rpx;
  background: #F8FAFC;
  border: 3rpx solid #E2E8F0;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

.group-form-btns {
  display: flex;
  gap: 24rpx;
}

.group-form-cancel,
.group-form-confirm {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.group-form-cancel {
  background: #F1F5F9 !important;
  color: #64748B !important;
}

.group-form-confirm {
  background: #F6C6EA !important;
  color: #fff !important;
}

/* Join Success Modal - 马卡龙治愈色 */
.join-success-card {
  background: linear-gradient(180deg, #FFF5F9 0%, #FFFFFF 40%);
  border-radius: 32rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
  padding: 56rpx 40rpx 40rpx;
  box-shadow: 0 24rpx 64rpx rgba(246, 198, 234, 0.25);
  border: 2rpx solid rgba(246, 198, 234, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.join-success-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #B5E8E0 0%, #F6C6EA 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(181, 232, 224, 0.4);
}

.join-success-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 12rpx;
}

.join-success-group {
  font-size: 36rpx;
  font-weight: 700;
  color: #F6C6EA;
  margin-bottom: 24rpx;
}

.join-success-desc {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.join-success-tips {
  background: rgba(181, 232, 224, 0.15);
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 36rpx;
}

.join-success-tips text {
  display: block;
  font-size: 24rpx;
  color: #64748B;
  line-height: 2;
}

.join-success-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #F6C6EA 0%, #D4A0C0 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 24rpx;
  text-align: center;
}

.group-switcher {
  background: #fff;
  border-radius: 32rpx;
  width: calc(100% - 96rpx);
  padding: 40rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
}

.group-switcher-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #94A3B8;
  display: block;
  margin-bottom: 24rpx;
}

.group-switcher-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.group-switcher-item {
  padding: 28rpx;
  border-radius: 20rpx;
  background: #F8FAFC;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
}

.group-switcher-item.active {
  background: rgba(246, 198, 234, 0.2);
}

.group-switcher-check {
  color: #F6C6EA;
  font-weight: 700;
}

.group-invite-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #E2E8F0;
}

.group-invite-label {
  font-size: 24rpx;
  color: #64748B;
}

.group-invite-copy {
  font-size: 26rpx;
  font-weight: 600;
  color: #F6C6EA;
}

.group-invite-link {
  font-size: 26rpx;
  font-weight: 600;
  color: #F6C6EA;
}

.group-switcher-new {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  border-radius: 20rpx;
  border: 3rpx dashed #F6C6EA;
  font-size: 28rpx;
  font-weight: 600;
  color: #F6C6EA;
}

.group-switcher-new-icon {
  font-size: 32rpx;
  font-weight: 700;
}

.group-switcher-new.join {
  border-color: #94A3B8;
  color: #64748B;
}

.member-invite-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: 6rpx;
}

.member-invite-inline {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #64748B;
}

.member-invite-sep {
  color: #E2E8F0;
}

.member-invite-copy {
  font-size: 26rpx;
  font-weight: 600;
  color: #F6C6EA;
}

.member-invite-link {
  font-size: 26rpx;
  font-weight: 600;
  color: #F6C6EA;
}

.member-invite-tip {
  font-size: 20rpx;
  color: #94A3B8;
  line-height: 1.3;
  padding-top: 2rpx;
}

.member-edit-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #F6C6EA;
  flex-shrink: 0;
}

.member-remove-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #94A3B8;
  flex-shrink: 0;
}

.member-leave-row {
  margin-top: 24rpx;
  padding: 20rpx 0;
  text-align: center;
  border-top: 1rpx solid #E2E8F0;
}

.member-leave-text {
  font-size: 26rpx;
  color: #94A3B8;
}

.member-delete-row {
  margin-top: 12rpx;
  padding: 20rpx 0;
  text-align: center;
  border-top: 1rpx solid #E2E8F0;
}

.member-delete-text {
  font-size: 26rpx;
  color: #F87171;
}

.creator-tag {
  font-size: 20rpx;
  color: #64748B;
  margin-left: 8rpx;
  padding: 2rpx 10rpx;
  background: rgba(181, 232, 224, 0.3);
  border-radius: 8rpx;
}

/* Edit Profile Modal */
.edit-profile-modal {
  background: #fff;
  border-radius: 32rpx;
  width: calc(100% - 96rpx);
  padding: 48rpx 40rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
}

.edit-profile-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #171116;
  display: block;
  margin-bottom: 40rpx;
}

.edit-profile-field {
  margin-bottom: 32rpx;
}

.edit-profile-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #64748B;
  display: block;
  margin-bottom: 16rpx;
}

.edit-profile-input {
  height: 88rpx;
  background: #F8FAFC;
  border: 3rpx solid #E2E8F0;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.edit-profile-colors {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.edit-profile-color {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 5rpx solid;
}

.edit-profile-color.active {
  box-shadow: 0 0 0 4rpx #fff, 0 0 0 8rpx #F6C6EA;
}

.edit-profile-btns {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.edit-profile-cancel,
.edit-profile-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.edit-profile-cancel {
  background: #F1F5F9 !important;
  color: #64748B !important;
}

.edit-profile-save {
  background: #F6C6EA !important;
  color: #fff !important;
}

/* ==========================================
   Weekday Bar
   ========================================== */
.weekday-bar {
  display: flex;
  margin: 12rpx 32rpx 0;
  padding: 16rpx 0;
  background: rgba(248, 246, 247, 0.5);
  border-radius: 16rpx 16rpx 0 0;
}

.weekday-cell {
  width: calc(100% / 7);
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 700;
  color: #64748B;
  box-sizing: border-box;
}

.weekday-cell.sunday {
  color: #F87171;
}

/* ==========================================
   Calendar Grid
   ========================================== */
.calendar-scroll {
  flex: 1;
  overflow: hidden;
}

.calendar-pad {
  padding: 0 32rpx;
}

.calendar-grid {
  overflow: hidden;
}

.calendar-row {
  display: flex;
}

.day-cell {
  width: calc(100% / 7);
  flex: none;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  padding: 8rpx;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  border-right: 1rpx solid rgba(246, 198, 234, 0.2);
  border-bottom: 1rpx solid rgba(246, 198, 234, 0.2);
}

.day-cell.empty {
  opacity: 0.4;
  background: rgba(248, 250, 252, 0.3);
}

.day-cell.today {
  background: #E8F5E9;
}

.day-cell-top {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  right: 4rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  z-index: 1;
  pointer-events: none;
}

.lunar-badge {
  font-size: 12rpx;
  line-height: 18rpx;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.holiday-badge {
  font-size: 18rpx;
  font-weight: 700;
  color: #fff;
  background: #F87171;
  border-radius: 4rpx;
  padding: 0 6rpx;
  line-height: 28rpx;
}

.day-header {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 0 2rpx;
}

.day-num {
  font-size: 26rpx;
  font-weight: 700;
  line-height: 1.2;
}

.day-events {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-top: 4rpx;
  overflow: hidden;
  flex: 1;
}

.event-tag {
  border-radius: 4rpx;
  padding: 2rpx 6rpx 0;
  min-height: 30rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.event-text {
  font-size: 16rpx;
  line-height: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}

/* ==========================================
   Bell FAB
   ========================================== */
.bell-fab {
  position: fixed;
  right: 40rpx;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #F6C6EA;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(246, 198, 234, 0.5);
  z-index: 50;
}

.bell-icon {
  font-size: 44rpx;
  line-height: 1;
}

/* ==========================================
   Role Picker
   ========================================== */
.role-picker {
  background: #fff;
  border-radius: 32rpx;
  width: calc(100% - 120rpx);
  padding: 56rpx 48rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.role-picker-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #171116;
}

.role-picker-sub {
  font-size: 24rpx;
  color: #94A3B8;
  margin-top: 8rpx;
}

.role-picker-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 48rpx;
  justify-content: center;
  width: 100%;
}

.role-picker-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 24rpx;
  border-radius: 24rpx;
  background: #F8FAFC;
  width: 200rpx;
  box-sizing: border-box;
}

.role-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 5rpx solid;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
}

.role-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
}

/* ==========================================
   User Dropdown
   ========================================== */
.dropdown-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 80;
}

.dropdown-panel {
  position: absolute;
  right: 48rpx;
  width: 360rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.12);
  overflow: hidden;
}

.dropdown-title {
  padding: 24rpx 32rpx 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: #94A3B8;
  letter-spacing: 0.05em;
}

.dropdown-list { padding: 0 12rpx 16rpx; }

.dropdown-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
}

.dropdown-item.active { background: rgba(246, 198, 234, 0.1); }

.dropdown-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid;
  flex-shrink: 0;
  font-size: 24rpx;
  font-weight: 700;
  color: #fff;
}

.dropdown-name {
  font-size: 28rpx;
  color: #64748B;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dropdown-item.active .dropdown-name {
  font-weight: 700;
  color: #0F172A;
}

.dropdown-check {
  font-size: 24rpx;
  color: #F6C6EA;
  font-weight: 700;
  flex-shrink: 0;
}

/* ==========================================
   Modal Overlay & Sheet
   ========================================== */
.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 100;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  background: transparent;
  transition: background 0.3s;
}

.modal-overlay.show { background: rgba(15, 23, 42, 0.4); }

.modal-overlay.center {
  justify-content: center;
  align-items: center;
}

.modal-sheet {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
}

.modal-sheet.show { transform: translateY(0); }

.modal-handle {
  display: flex;
  justify-content: center;
  padding: 24rpx 0 8rpx;
}

.handle-bar {
  width: 96rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #E2E8F0;
}

.modal-content {
  padding: 16rpx 48rpx 80rpx;
  padding-bottom: calc(80rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #171116;
}

.modal-day-text {
  font-size: 28rpx;
  color: #94A3B8;
  font-weight: 500;
}

.close-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  color: #94A3B8;
  font-size: 36rpx;
}

/* ==========================================
   Form Elements
   ========================================== */
.form-group {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(15, 23, 42, 0.6);
  letter-spacing: 0.05em;
  padding-bottom: 16rpx;
}

.form-textarea {
  width: 100%;
  background: #F8FAFC;
  border: 3rpx solid #F1F5F9;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #0F172A;
  min-height: 160rpx;
  box-sizing: border-box;
}

.form-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background: #F6C6EA !important;
  border-radius: 24rpx !important;
  font-size: 32rpx;
  font-weight: 700;
  color: #fff !important;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 96rpx;
}

.btn-primary.disabled {
  opacity: 0.5;
  background: #F1F5F9 !important;
}

.btn-danger {
  width: 100%;
  height: 88rpx;
  border-radius: 24rpx !important;
  font-size: 28rpx;
  font-weight: 700;
  color: #F87171 !important;
  border: 2rpx solid #FECACA !important;
  background: transparent !important;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 88rpx;
}

/* ==========================================
   Month Picker
   ========================================== */
.picker-panel {
  background: #fff;
  border-radius: 32rpx;
  width: calc(100% - 96rpx);
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
  transform: scale(0.95);
  opacity: 0;
  transition: transform 0.3s ease-out, opacity 0.3s ease-out;
}

.picker-panel.show {
  transform: scale(1);
  opacity: 1;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 24rpx;
}

.picker-year {
  font-size: 36rpx;
  font-weight: 700;
  color: #0F172A;
}

.month-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 28rpx 40rpx;
}

.month-item {
  width: 33.333%;
  box-sizing: border-box;
  padding: 24rpx 12rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
}

.month-item.current {
  background: #F6C6EA;
  color: #fff;
}

/* ==========================================
   Member Modal
   ========================================== */
.member-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: #F8FAFC;
}

.member-item.current {
  background: rgba(246, 198, 234, 0.1);
  box-shadow: inset 0 0 0 2rpx rgba(246, 198, 234, 0.3);
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid;
  flex-shrink: 0;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
}

.member-avatar-fullname text {
  font-size: 20rpx;
  max-width: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.member-info { flex: 1; min-width: 0; }

.member-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.member-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.current-tag {
  font-size: 18rpx;
  font-weight: 700;
  color: #F6C6EA;
  background: rgba(246, 198, 234, 0.15);
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.member-color-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 4rpx;
}

.color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.color-label {
  font-size: 20rpx;
  color: #94A3B8;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  color: #94A3B8;
  font-size: 24rpx;
  flex-shrink: 0;
}

.add-form {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.add-input {
  height: 88rpx;
  background: #F8FAFC;
  border: 3rpx solid #F1F5F9;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #0F172A;
}

.add-btns {
  display: flex;
  gap: 16rpx;
}

.add-confirm {
  flex: 1;
  height: 88rpx;
  background: #F6C6EA !important;
  color: #fff !important;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 20rpx !important;
  line-height: 88rpx;
}

.add-cancel {
  height: 88rpx;
  padding: 0 32rpx;
  color: #94A3B8 !important;
  font-size: 28rpx;
  border-radius: 20rpx !important;
  background: transparent !important;
  line-height: 88rpx;
}

.add-member-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  height: 96rpx;
  border-radius: 24rpx;
  border: 3rpx dashed #F1F5F9;
}

.add-icon {
  font-size: 32rpx;
  color: #64748B;
  font-weight: 700;
}

.add-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #64748B;
}
